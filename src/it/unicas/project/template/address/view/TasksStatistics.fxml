<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="650.0" prefWidth="900.0" spacing="20.0" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unicas.project.template.address.view.TasksStatisticsController"
      styleClass="background" stylesheets="@DarkTheme.css">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="40.0" styleClass="card-container">
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="stat-card">
            <Label text="Task Aperti" styleClass="stat-label"/>
            <Label fx:id="lblTaskAperti" text="0" styleClass="stat-value-open"/>
        </VBox>

        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="stat-card">
            <Label text="Completati" styleClass="stat-label"/>
            <Label fx:id="lblTaskCompletati" text="0" styleClass="stat-value-completed"/>
        </VBox>

        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="280.0" styleClass="stat-card">
            <Label text="Carico di Lavoro" styleClass="stat-label"/>
            <Label fx:id="lblWorkload" text="Nessuna scadenza imminente" wrapText="true" styleClass="stat-workload"/>
        </VBox>

    </HBox>

    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">

        <PieChart fx:id="pieChartPriorita" title="Distribuzione PrioritÃ " prefHeight="350.0" prefWidth="400.0" styleClass="chart-background">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
        </PieChart>

        <VBox HBox.hgrow="ALWAYS">
            <BarChart fx:id="barChartCategorie" title="Tempo dedicato per Categoria" prefHeight="350.0" styleClass="chart-background">
                <xAxis>
                    <CategoryAxis fx:id="xAxisCategorie" label="Categoria" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxisCategorie" label="Minuti" side="LEFT" />
                </yAxis>
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                </padding>
            </BarChart>
        </VBox>

    </HBox>

</VBox>