<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="650.0" prefWidth="900.0"
      spacing="30"
      alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unicas.project.template.address.view.TasksStatisticsController"
      stylesheets="@DarkTheme.css"
      styleClass="background"
      style="-fx-text-fill: white;"> <padding>
    <Insets top="25" right="25" bottom="25" left="25"/>
</padding>

    <Label text="Statistiche Attività"
           styleClass="page-title"
           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER"
          spacing="30"
          styleClass="card-container">

        <VBox alignment="CENTER" spacing="8" prefWidth="200" styleClass="stat-card" style="-fx-background-color: #2F223D; -fx-background-radius: 10; -fx-padding: 15;">
            <Label text="Task Aperti" style="-fx-text-fill: #aaaaaa; -fx-font-size: 12px;"/>
            <Label fx:id="lblTaskAperti" text="0" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="8" prefWidth="200" styleClass="stat-card" style="-fx-background-color: #2F223D; -fx-background-radius: 10; -fx-padding: 15;">
            <Label text="Completati" style="-fx-text-fill: #aaaaaa; -fx-font-size: 12px;"/>
            <Label fx:id="lblTaskCompletati" text="0" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="8" prefWidth="280" styleClass="stat-card" style="-fx-background-color: #2F223D; -fx-background-radius: 10; -fx-padding: 15;">
            <Label text="Carico di Lavoro" style="-fx-text-fill: #aaaaaa; -fx-font-size: 12px;"/>
            <Label fx:id="lblWorkload"
                   text="-"
                   wrapText="true"
                   textAlignment="CENTER"
                   style="-fx-text-fill: #F071A7; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>

    </HBox>

    <Separator prefWidth="600" opacity="0.3"/>

    <HBox spacing="25" alignment="CENTER" VBox.vgrow="ALWAYS">

        <PieChart fx:id="pieChartPriorita"
                  title="Distribuzione Priorità"
                  prefHeight="350"
                  prefWidth="400"
                  legendSide="BOTTOM"
                  style="-fx-background-color: transparent; -fx-text-base-color: white;"/>

        <VBox HBox.hgrow="ALWAYS">
            <BarChart fx:id="barChartCategorie"
                      title="Task per Categoria"
                      prefHeight="350"
                      legendSide="BOTTOM"
                      style="-fx-background-color: transparent; -fx-text-base-color: white;">
                <xAxis>
                    <CategoryAxis fx:id="xAxisCategorie" label="Categoria" tickLabelFill="WHITE"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxisCategorie" label="Quantità" tickLabelFill="WHITE"/>
                </yAxis>
            </BarChart>
        </VBox>

    </HBox>

</VBox>