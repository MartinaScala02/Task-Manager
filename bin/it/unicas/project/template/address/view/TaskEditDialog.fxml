<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.TaskEditDialogController"
            stylesheets="@DarkTheme.css" styleClass="background"
            prefWidth="550" prefHeight="680">

    <children>
        <VBox spacing="20" alignment="TOP_LEFT"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <Label text="Dettagli Task" styleClass="header-label" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <GridPane hgap="15" vgap="15" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100" prefWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Titolo:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="titoloField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Descrizione:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label" GridPane.valignment="TOP"/>
                <TextArea fx:id="descrizioneField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                          wrapText="true" prefRowCount="3" maxHeight="100"
                          styleClass="form-field"/>

                <Label text="Categoria:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
                <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" styleClass="form-field"/>

                <Label text="Priorità:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
                <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity" styleClass="form-field"/>

                <Label text="Scadenza:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
                <HBox spacing="5" alignment="CENTER_LEFT" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <children>
                        <DatePicker fx:id="scadenzaField" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="form-field"/>

                        <Button text="✖" onAction="#handleClearDate"
                                style="-fx-background-color: transparent; -fx-text-fill: #aaa; -fx-border-color: #555; -fx-border-radius: 3; -fx-cursor: hand; -fx-font-size: 10px; -fx-padding: 6 8;">
                            <tooltip><Tooltip text="Rimuovi la data di scadenza"/></tooltip>
                        </Button>
                    </children>
                </HBox>

                <Label text="Allegati:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label" GridPane.valignment="TOP" style="-fx-padding: 5 0 0 0;"/>

                <VBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <children>
                        <ListView fx:id="attachmentListView" prefHeight="120.0"
                                  styleClass="form-field"
                                  style="-fx-background-color: #2A1E35; -fx-border-color: #555; -fx-background-radius: 4; -fx-border-radius: 4;"/>

                        <Button fx:id="btnAddAttachment" text="+ Aggiungi File" onAction="#handleAddAttachment"
                                maxWidth="Infinity"
                                style="-fx-background-color: transparent; -fx-border-color: #666; -fx-border-style: dashed; -fx-border-radius: 4; -fx-text-fill: #aaa; -fx-cursor: hand; -fx-font-size: 12px; -fx-padding: 8;">
                            <tooltip><Tooltip text="Clicca per selezionare un file dal PC"/></tooltip>
                        </Button>
                    </children>
                </VBox>

            </GridPane>

            <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <children>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Annulla" onAction="#handleCancel" styleClass="secondary-button" cancelButton="true" prefWidth="100"/>
                    <Button text="Salva" onAction="#handleOk" fx:id="okButton" styleClass="primary-button" defaultButton="true" prefWidth="100"/>
                </children>
            </HBox>

        </VBox>
    </children>
</AnchorPane>